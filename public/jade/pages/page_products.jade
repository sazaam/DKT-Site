//- ----------------------- START  => Extends

extends ./page

//- ----------------------- END : Extends

block content  
	//-  EMPTY

	block flow
		//- DO NOT REMOVE, IN USE FOR CHILDREN LOADING, THEN SLIDESHOW AND PATCHWORK
		- var target_sections = section.children ;



		nav.data-container.none
			//- HERE ARE APPENDED INVISIBILY THE CHILDREN SECTIONS 
			- if(!!target_sections && target_sections.length){
				each child_section in target_sections
					+loadchildrensection(child_section, section)
			- }
			

		//- SLIDESHOW GOES FIRST, BUT WITH A HEIGHT OF 50%
		.extra.rel.context(style='height:50%;')
			+slideshow()
		

		//- THEN THE CHILDREN LOADING BLOCK
		.products_section_container
			//- HERE WILL STAND THE FUTURE PRODUCTS -- DO NOT REMOVE !!
		

		//- THEN COMES PATCHWORK
		+patchwork()

		//- AND EVENTUALLY THE PRODUCTS PAGE RELATED BLOCKS 
		each products_article in getComponentsByTypename(section.post.bracket, 'ComponentModularArticle')
			+article(products_article, params)


		+footer()
	